<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/small_padding"
        android:text="@string/home"
        android:textSize="@dimen/big_ext_size" />

    <Button
        android:id="@+id/btn_repositories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/repositories" />

    <Button
        android:id="@+id/btn_Projects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/projects" />

    <Button
        android:id="@+id/btn_Pull_requests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pull_requests" />

    <Button
        android:id="@+id/btn_issues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/issues" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/favorites"
        android:textSize="@dimen/big_ext_size"
        android:layout_marginTop="@dimen/medium_pudding"
        android:paddingBottom="@dimen/small_padding"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--        TODO сделать макет динамических вью-->
            <Button
                android:id="@+id/btn_TODO1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TODO1" />

            <Button
                android:id="@+id/btn_TODO2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TODOD2" />
            <!--        -->
        </LinearLayout>

    </ScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>